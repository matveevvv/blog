{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Статья</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Уникальный номер</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Заголовок</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Текст</th>
                <td>{{ article.body }}</td>
            </tr>
            <tr>
                <th>Дата создания</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">Вернуться к списку</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">Редактировать</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
