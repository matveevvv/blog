{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Список статей</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Уникальный Номер</th>
                <th>Заголовок</th>
                <th>Текст</th>
                <th>Дата создания</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.body }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_article_show', {'id': article.id}) }}">Показать</a>
                    <a class="btn btn-secondary" href="{{ path('app_article_edit', {'id': article.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_article_new') }}">Создать новую</a>
{% endblock %}
